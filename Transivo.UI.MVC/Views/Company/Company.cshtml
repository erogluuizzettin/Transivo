@using Transivo.Model.Models
@{List<Company> companies = TempData["Companies"] as List<Company>; }

<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            @*Page Title Start --*@
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>İŞ ORTAKLARIMIZ</h2>
                </div>
            </div>
            @*Page Title End*@
        </div>
    </div>
</section>
<!--== Page Title Area End ==
<!--== Car List Area Start ==-->
<section id="car-list-area" class="section-padding">
    <div class="container">
        <div class="row">
            <!-- Car List Content Start -->
            <div class="col-lg-12">
                <div class="car-list-content">
                    <div class="row">

                        @if (companies != null)
                        {
                            for (int i = 0; i < companies.Count; i++)
                            {
                                if (i % 2 == 0)
                                {
                                    <div class="col-lg-6 col-md-6">
                                        <div class="single-car-wrap">
                                            <div class="car-list-thumb car-thumb-1"><img src="@companies[i].LogoPath" style="width:300px;height:300px;" /></div>
                                            <div class="car-list-info without-bar">
                                                <h2><a href="#">@companies[i].CompanyName</a></h2>
                                                <h8>Km başına taşıma ücreti :</h8>   <h5>@companies[i].Freight ₺</h5>
                                                @Html.ActionLink("Detay", "CompanyDetail", "Company", new { id = companies[i].ID }, new { @class = "rent-btn" })
                                            </div>
                                        </div>
                                    </div>
                                }

                                else
                                {
                                    <div class="col-lg-6 col-md-6">
                                        <div class="single-car-wrap">
                                            <div class="car-list-thumb car-thumb-2"><img src="@companies[i].LogoPath" style="width:300px;height:300px;" /></div>
                                            <div class="car-list-info without-bar">
                                                <h2><a href="#">@companies[i].CompanyName</a></h2>
                                                <h8>Km başına taşıma ücreti :</h8>   <h5>@companies[i].Freight ₺</h5>
                                                @Html.ActionLink("Detay", "CompanyDetail", "Company", new { id = companies[i].ID }, new { @class = "rent-btn" })
                                            </div>
                                        </div>
                                    </div>
                                }

                            }
                        }

                    </div>

                </div>

                <!-- Single Car Start -->
                <!-- Single Car End -->
                <!-- Page Pagination Start -->
                <div class="page-pagi">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">4</a></li>
                            <li class="page-item"><a class="page-link" href="#">5</a></li>
                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                        </ul>
                    </nav>
                </div>
                <!-- Page Pagination End -->
            </div>
            <!-- Car List Content End -->
        </div>
    </div>
</section>
<!--== Car List Area End ==-->