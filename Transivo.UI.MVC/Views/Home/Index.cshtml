                        $.each(resp, function (key, value) {
                            $("#districts").append('<option value=' + value.Value + '>' + value.Text + '</option>');
                        });
                    } else {
                        alert("veri gelmedi");
                    }
                },
                error: function (err) {
                    alert("hata");
                    console.log(err);
                }
            });
        });




        $("#arriveCountry").change(function () {
            var countryID = $("#arriveCountry").val();
            $("#arriveCity").empty();
            $("#arriveDistrict").empty();
            $("#arriveCity").append('<option>İl</option>');
            $("#arriveDistrict").append('<option>İlçe</option>');

            $.ajax({
                url: "/Register/GetCitiesByCountry/",
                type: "POST",
                data: { "id": countryID },
                dataType: "json",
                contentType: "application/x-www-form-urlencoded; charset=UTF-8",
                success: function (resp) {
                    if (resp != null) {
                        $("#arriveCity").empty();
                        $("#arriveCity").append('<option>İl</option>');
                        $.each(resp, function (key, value) {
                            $("#arriveCity").append('<option value=' + value.Value + '>' + value.Text + '</option>');
                        });
                    } else {
                        alert("veri gelmedi");
                    }
                },
                error: function (err) {
                    alert("hata");
                    console.log(err);
                }
            });
        });

        $("#arriveCity").change(function () {
            var cityID = $("#arriveCity").val();
            $("#arriveDistrict").append('<option>İlçe</option>');
            $("#arriveDistrict").empty();

            $.ajax({
                url: "/Register/GetDistrictByCity/",
                type: "POST",
                data: { "id": cityID },
                dataType: "json",
                contentType: "application/x-www-form-urlencoded; charset=UTF-8",
                success: function (resp) {
                    if (resp != null) {
                        $("#arriveDistrict").empty();
                        $("#arriveDistrict").append('<option>İlçe</option>');
                        $.each(resp, function (key, value) {
                            $("#arriveDistrict").append('<option value=' + value.Value + '>' + value.Text + '</option>');
                        });
                    } else {
                        alert("veri gelmedi");
                    }
                },
                error: function (err) {
                    alert("hata");
                    console.log(err);
                }
            });
        });
    </script>

}